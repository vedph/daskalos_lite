{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@daskalos/core": ["libs/core/src/index.ts"],
      "@daskalos/api": ["libs/api/src/index.ts"],
      "@daskalos/ui": ["libs/ui/src/index.ts"],
      "@daskalos/material": ["libs/material/src/index.ts"],
      "@daskalos/features/flow-run": ["libs/features/flow-run/src/index.ts"],
      "@daskalos/features/flow-summary": [
        "libs/features/flow-summary/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
